{% extends 'layouts/body.html.twig' %}

{% block title %}
    Product
{% endblock %}

{% block content %}

	<div class="max-w-7xl w-4/5 mx-auto py-6 sm:px-6 lg:px-34 rounded-lg">
        <div class="overflow-hidden rounded-lg shadow-lg border">

            <div class="max-w-7xl w-4/5 mx-auto py-6 sm:px-6 lg:px-34">
                
                <img src="https://via.placeholder.com/400x200" alt="{{ product.name }}" class="card-img-top rounded-lg">
               
                <header class="flex items-center justify-between leading-tight p-2 md:p-4">

                    <h1 class="text-lg">
                        <p class="font-medium hover:underline text-black">
                            {{ product.name }}
                        </p>
                        <p class="card-text text-sm">{{ product.description }}</p>
                        <span class="font-semibold mt-auto">${{ product.price }}</span>                      
                    </h1>

                    <form class="mt-4 p-4 bg-light" method="post">
                        <div class="form-group">
                            <label for="quantity" class="block mb-1 text-sm font-medium text-gray-900 py-1 px-1">
                                Quantity
                            </label>
                            <input type="number" class="form-control rounded-lg bg-gray-50 border border-gray-300 text-gray-900 text-sm block w-full p-2.5 focus:outline-none focus:ring focus:ring-gray-500" id="quantity">
                        </div>
                        <div class="flex items-center justify-end px-4 py-3 text-right sm:px-6">
                            <button class="shadow rounded-lg overflow-hidden inline-flex items-center px-4 py-3 font-medium border border-gray-300 text-sm tracking-widest hover:bg-gray-700 hover:text-white disabled:opacity-25 transition duration-700 ease-in-out">
                                Add to Cart
                            </button>
                    </form>
                    
                </header>

            </div>
            
        </div>
    </div>   

{% endblock %}